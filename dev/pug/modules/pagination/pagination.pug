.pagination
    ul.pagination__list
        li.pagination__item
            a(href="#" title="Prev page").btn--disabled.pagination__btn-prev
                +icon('arrow-prev')
        li.pagination__item.is-active
            a(href="#" title="Go to page 1").pagination__number 1
        li.pagination__item
            a(href="#" title="Go to page 2").pagination__number 2
        li.pagination__item
            a(href="#" title="Go to page 3").pagination__number 3
        li.pagination__item
            a(href="#").pagination__btn-next
                +icon('arrow-next')
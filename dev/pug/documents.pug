                    },
                ]
            each doc in docs
                article.card.card--type--docs
                    .card__title= doc.title
                    .card__descr= doc.descr
                    a(href="./static/images/general/logo.png" download).card__more Скачать документ
                        +icon('arrow-next', 'card__icon')
                hr.divider.divider--theme--light
            include ./modules/pagination/pagination
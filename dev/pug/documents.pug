extends template/main

block variables
    - var title = 'Документы'
    - var pageClass = 'docs-page'

block content
    section.section.docs 
        .container 
            ul.breadcrumbs(itemprop="itemListElement" itemscope="" itemtype="http://schema.org/ListItem")
